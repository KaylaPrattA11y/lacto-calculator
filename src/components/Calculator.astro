<div class="calc">
  <div class="calc-inputs">
    <div class="calc-group">
      <label for="brine">Brine percent</label>
      <input 
      id="brine" 
      type="number" 
      name="brine" 
      value="2.2" 
      min="2" 
      max="5" 
      aria-describedby="brineHelper" />
      <span class="calc-type" aria-hidden="true">%</span>
      <p class="calc-text" data-validate="field" aria-live="polite" role="alert">For a safer ferment, please choose a value between 2-5%.</p>
      <p class="calc-text" id="brineHelper">Determine the strength of the brine. Varies per recipe and personal taste.</p>
    </div>
    <div class="calc-group">
      <label for="weight">Weight</label>
      <input 
      id="weight" 
      type="number" 
      name="weight" 
      value="682" 
      min="1" 
      aria-describedby="weightHelper" />
      <span class="calc-type" aria-hidden="true">g/oz</span>
      <p class="calc-text" id="weightHelper">Combined weight of vegetables and water in grams or ounces.</p>
    </div>
  </div>
  <div class="calc-output">
    <label for="salt">Salt required</label>
    <output id="salt" for="brine weight" name="salt">1</output>
    <span>grams / ounces</span>
  </div>
</div>


<style>
  .calc {
    margin: 0;
    padding: 0;
    border: 0;
    display: grid;
    gap: 1rem;
  }
  .calc-output {
    text-align: center;
    padding: 2rem 1rem;
    border-radius: 0.5rem;
    display: grid;
    gap: 1rem;
    background: 
      linear-gradient(
        to bottom right,
        hsl(329.03, 100%, 93.92%) 0%,
        hsl(329.03, 100%, 93.92%) 8.1%,
        hsl(327.1, 100%, 93.92%) 15.5%,
        hsl(324.38, 100%, 93.73%) 22.5%,
        hsl(322.5, 100%, 93.73%) 29%,
        hsl(318.75, 100%, 93.73%) 35.3%,
        hsl(314.55, 100%, 93.53%) 41.2%,
        hsl(310.91, 100%, 93.53%) 47.1%,
        hsl(307.06, 100%, 93.33%) 52.9%,
        hsl(303.53, 100%, 93.33%) 58.8%,
        hsl(298.29, 100%, 93.14%) 64.7%,
        hsl(294.86, 100%, 93.14%) 71%,
        hsl(293.14, 100%, 93.14%) 77.5%,
        hsl(290, 100%, 92.94%) 84.5%,
        hsl(288.33, 100%, 92.94%) 91.9%,
        hsl(288.33, 100%, 92.94%) 100%
      );
  }
  .calc-output label {
    font-size: clamp(1.25rem, 4vw, 1.5rem);
  }
  .calc-inputs {
    order: 2;
    display: flex;
    gap: 0.5rem;
  }
  /* tablet range */
  @media (min-width: 764px) and (max-width: 1000px) {
    .calc-inputs {
      flex-direction: column;
    }
  }
  .calc-inputs label {
    font-size: clamp(1rem, 2vw, 1.15rem);
    display: block;
  }
  .calc-text {
    font-size: clamp(0.75rem, 4vw, 0.8rem);
  }
  .calc-group {
    flex-basis: 50%;
    padding: 0.45rem 0.5rem;
    border-radius: 3px;
    border: 1px solid var(--border-color);
    background-color: hsl(295, 75%, 97%);
  }
  .calc-group:focus-within {
    outline: auto;
  }
  .calc-type {
    font-size: clamp(1rem, 4vw, 1.25rem);
    font-weight: 700;
    color: hsl(295, 22%, 59%);
  }
  output {
    font-weight: 500;
    font-size: clamp(2.75rem, 4vw, 4rem);
  }
  input {
    background: none;
    border: 0;
    margin: 0;
    padding: 0;
    border-bottom: 1px solid var(--border-color);
    inline-size: 5rem;
    font-size: clamp(1.35rem, 4vw, 1.75rem);
    color: var(--text-color);
  }
  input:focus-visible {
    outline: 0;
  }
  .calc-group:has(:out-of-range:not(:focus)),
  input:out-of-range:not(:focus) {
    border-color: hsl(0, 100%, 35%);
  }
  input:out-of-range:not(:focus) ~ [data-validate="field"] {
    display: block;
  }
  [data-validate="field"] {
    display: none;
    color: hsl(0, 100%, 35%);
  }
</style>

<script>
const brine = document.getElementById("brine");
const weight = document.getElementById("weight");
const salt = document.getElementById("salt");
const calculate = () => salt.value = ((brine.value * weight.value) / 100).toFixed(2);

[brine, weight].forEach(input => input.addEventListener("input", () => calculate()));
[brine, weight].forEach(input => input.addEventListener("click", e => e.target.select()));
document.addEventListener("DOMContentLoaded", () => calculate());
</script>
