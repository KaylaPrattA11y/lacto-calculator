---
export interface Props {
  id: string;
  heading: string;
  backToTop?: boolean;
}

const { 
  id,
  heading, 
  backToTop = false,
} = Astro.props;
---

<dialog id={id}>
  <div class="dialog-header">
    <h2>{heading}</h2>
    <button aria-controls={id} aria-haspopup="dialog" aria-label="Close" class="btn-default">
      <kay-icon class="carbon:close" aria-hidden="true"></kay-icon>
    </button>
  </div>
  <div class="dialog-main" id=`${id}Main`>
    <slot />
  </div>
  <a href=`#${id}Main` class="btn-primary" hidden={backToTop === false}>Top</a>
</dialog>

<style>
  .btn-primary {
    position: sticky;
    bottom: 0;
    display: inline-block;
    border-top-left-radius: 0;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
   }
  dialog {
    background: var(--calc-group-background-color);
    border-radius: 3px;
    border: 1px solid var(--border-color);
    color: var(--text-color);
    inline-size: 100%;
    block-size: 100svh;
    padding: 0;
  }
  dialog::backdrop {
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(2px);
  }
  .dialog-header {
    position: sticky;
    top: 0;
    z-index: 1;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    background: var(--calc-output-background-color);
    padding: 1.5rem 1rem 3rem 1rem;
    -webkit-mask: var(--mask-waves);
    mask: var(--mask-waves);
  }
  .dialog-main {
    padding: 1rem 1rem 2rem 1rem;
    scroll-margin-top: 109px;
  }
  .dialog-header h2 {
    margin-block: 0;
  }
  .dialog-header button {
    align-self: flex-start;
    font-size: var(--font-size-lg);
  }
  dialog::-webkit-scrollbar {
    background: var(--main-background-color);
  }
  dialog::-webkit-scrollbar-thumb {
    background: var(--link-color);
    border-radius: 100vmax;
    height: 0.5rem
  }
  /* sm and down */
  @media (max-width: 500px) {
    dialog:modal {
      width: 100svw;
      height: 100svh;
      max-width: 100%;
      max-height: 100%;
    }
  }
  /* sm and up */
  @media (min-width: 500px) {
    dialog {
      inline-size: 500px;
      block-size: revert;
    }
  }
</style>
