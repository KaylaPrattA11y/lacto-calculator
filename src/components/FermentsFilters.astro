---
import FermentsMenu from "./FermentsMenu.astro";
---

<div id="myFermentsFilter" role="group" aria-label="Ferment list visibility options">
  <button type="button" tabindex="0" role="radio" aria-checked="true" data-value="0">All</button>
  <button type="button" tabindex="-1" role="radio" aria-checked="false" data-value="1">Current</button>
  <button type="button" tabindex="-1" role="radio" aria-checked="false" data-value="3">Upcoming</button>
  <button type="button" tabindex="-1" role="radio" aria-checked="false" data-value="2">Past</button>

  <FermentsMenu />
</div>

<style>
  button[data-length] {
    text-align: left;
  }
  button[data-length]::after {
    content: " (" attr(data-length) ")";
  }
  /* do not show "current", "past" or "upcoming" if no ferments exist */
  button[data-value="0"][data-length="0"] ~ button {
    display: none;
  }
  [role="group"] {
    display: flex;
    margin-inline: -1rem;
    margin-block: -1rem 2rem;
    border-bottom: 1px solid var(--border-color);
  }
  [role="radio"] {
    color: var(--text-color);
    padding: 0.5rem 0.75rem;
    border: 0;
    border-bottom: 3px solid transparent;
    background: 0;
    cursor: pointer;
  }
  [role="radio"][aria-checked="true"] {
    border-color: var(--link-color);
  }
</style>
